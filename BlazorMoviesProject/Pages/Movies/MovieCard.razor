@using BlazorMoviesProject.Models

@if (Movie is not null)
{
    <div class="card h-100 fade-in">
        <img class="card-img-top" alt="Movie Poster" src="@Movie.PosterPath" />
        <div class="card-body border-top bg-light">
            <h5 class="card-title">@Movie.Title</h5>
            <p class="card-text">
                @DateTime.Parse(Movie.ReleaseDate).ToString("MMM dd yyyy")
            </p>
        </div>
        <div class="card-footer text-end">
            <button class="btn btn-primary" @onclick="() => OnBtnClick.InvokeAsync(Movie.Id)">
                More Info
            </button>
        </div>
    </div>
}
else
{
    <div class="card h-100">
        <img class="card-img-top" alt="Movie Poster" src="/img/PosterPlaceHolder.png" />
        <div class="card-body border-top bg-light">
            <h5 class="card-title placeholder-glow">
                <span class="placeholder col-6"></span>
            </h5>
            <p class="card-text placeholder-glow">
                <span class="placeholder col-8"></span>
            </p>
        </div>
        <div class="card-footer text-end">
            <button class="btn btn-primary disabled placeholder col-6">
                More Info
            </button>
        </div>
    </div>
}


